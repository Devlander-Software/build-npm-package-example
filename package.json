{
  "name": "@devlander/validators",
  "version": "1.0.0",
  "description": "A simple NPM package with reusable validation utilities.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/umd/index.js",
  "type": "commonjs",
  "scripts": {
    "build:cjs": "babel src --out-dir dist/cjs --presets @babel/preset-env --copy-files",
    "build:esm": "babel src --out-dir dist/esm --presets @babel/preset-env --copy-files --no-comments",
    "build:umd": "babel src --out-dir dist/umd --presets @babel/preset-env --copy-files",
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.21.0"
  }
}